{
  "name": "contract-variable-tracer",
  "description": "A CLI tool for tracing and monitoring EVM smart contract variable changes over time by analyzing events",
  "author": "Logan Luo <github.com/logan272>",
  "version": "0.4.0",
  "license": "MIT",
  "keywords": [
    "EVM",
    "Tracing",
    "Ethereum",
    "Storage variables"
  ],
  "engines": {
    "node": ">= 20",
    "pnpm": ">= 10.12"
  },
  "packageManager": "pnpm@10.12.1",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "cvt": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "cli": "node dist/cli.cjs",
    "build": "tsup",
    "watch": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "ts-check": "tsc --noEmit",
    "typedoc": "typedoc",
    "prepare": "husky install && pnpm build"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "viem": "^2.31.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.11.1",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "cli-progress": "^3.12.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "yargs": "^18.0.0"
  }
}
